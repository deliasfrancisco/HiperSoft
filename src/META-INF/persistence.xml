<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HiperSoftPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.fatecpp.hipersoft.model.domain.ItemCompra</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Compra</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Fornecedor</class>
    <class>br.com.fatecpp.hipersoft.model.domain.TipoPagamento</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Produto</class>
    <class>br.com.fatecpp.hipersoft.model.domain.ItensVenda</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Venda</class>
    <class>br.com.fatecpp.hipersoft.model.domain.TipoProduto</class>
    <class>br.com.fatecpp.hipersoft.model.domain.UnidadeMedida</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Usuario</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Cliente</class>
    <class>br.com.fatecpp.hipersoft.model.domain.Caixa</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hiper_soft?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
